package com.shinhan.day04;

import java.util.Scanner;

public class 오장문풀 {

	public static void main(String[] args) {
		// f1();
		// f6();
//		f7();
		// f8();
		f9();

	}

	private static void f9() {

		Scanner sc = new Scanner(System.in); // Scanner 는 import해야한다. java,lang은 바로 사용 가능함.
		menuDisplay();
		boolean isLoop = false;
		int studentCount = 0;
		int[] score = null; // 학생 수를 모르기 때문에 초기화할 수 없지만 지역변수라서 초기화하지 않으면 사용못함

		while (isLoop) {
			System.out.println("선택>>");
			int jobSelect = sc.nextInt();
			// if(jobSelect ==5) break;
			switch (jobSelect) {
			case 1 -> {
				studentCount = f_insertCount(sc);
				score = new int[studentCount];
			}
			case 2 -> {
				f_insertScore(sc, score);
			}
			case 3 -> {
				System.out.println("점수리스트");
			}
			case 4 -> {
				System.out.println("분석");
			}
			case 5 -> {
				isLoop = false;
			}
			default -> {
				System.out.println("다시 선택하시오");
			}
			}
		}
		sc.close();

	}

	private static void f_insertScore(Scanner sc, int[] score) {
		if (score == null) {
			System.out.println("학생수가 먼저 입력되어야 한다.");
			return;
		}
		for (int i = 0; i < score.length; i++) {
			System.out.printf("scores[%d]>", i);
			score[i] = sc.nextInt();

		}
	}

	// scanner sc2는 매개변수 argument parameter
	private static int f_insertCount(Scanner sc2) {
		System.out.println("학생수>>");
		// int count = sc2.nextInt();
		// return count;
		return sc2.nextInt();
	}

	private static void menuDisplay() {
		System.out.println("----------------------------------------------------");
		System.out.println("1. 학생수 | 2. 점수입력 | 3. 점수리스트 | 4. 분석 | 5. 종료");
		System.out.println("----------------------------------------------------");
	}

	private static void f8() {
		int[][] array = { { 95, 86 }, { 83, 92, 96 }, { 78, 83, 93, 87, 88 } };
		int total = 0;
		int cnt = 0;

		for (int[] datas : array) {
			for (int data : datas) {
				cnt++;
				total += data;
			}
		}
		System.out.println("총점 = " + total);
		System.out.println("평균 = " + (double) total / cnt);
	}

	private static void f7() {
		int[] array = { 1, 5, 3, 8, 2, 9999 };
		int max = Integer.MIN_VALUE;
		for (int su : array) {
			/*
			 * if (su > max) { max = su; } 삼항 연산자로 바꾸는게 나음
			 *
			 */
			max = su > max ? su : max;
		}
		System.out.println(max);
	}

	private static void f6() {
		int[][] array = { { 95, 86 }, { 83, 92, 96 }, { 78, 83, 93, 87, 88 } };
		System.out.println(array.length); // 2차원 : 1차원이 1차원임을 강조
		System.out.println(array[2].length);
		for (int[] datas : array) {
			for (int data : datas) {
				System.out.print(data + "\t");
			}
			System.out.println();
		}
	}

	private static void f1() {
		char[] arr = new char[3];
		System.out.println(arr[0]);
		System.out.println(arr[1]);
		System.out.println(arr[2]);
	}

	/*
	 * private static void f1() { String[] arr = new String[3];
	 * System.out.println(arr[0]); System.out.println(arr[1]);
	 * System.out.println(arr[2]); }
	 */
}

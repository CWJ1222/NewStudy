package com.shinhan.day02;

import java.io.IOException;
import java.io.InputStream;
import java.io.PrintStream;
import java.util.Scanner;

/*
 * 
 * java.base 모듈의 java.lang패키지는 import없이 사용
 * 나머지 클래스 등은 반드시 import한다.
 * 
 */
public class 표준입출력 {

	public static void main(String[] args) {
	  //rint();
	  //input();
	  input2();

	}

	/*
	 * private static void input() throws IOException { // 표준입력 : 기본은 키보드이다.
	 * InputStream a = System.in; int b = a.read(); System.out.println((char) b); }
	 */

	private static void input2() {
		// scanner 표준입력을 간단히 사용하기 위해 제공되는 util
		InputStream a = System.in;
		// 1. 객체참조변수선언
		Scanner sc;
		// 2, 객체생성
		sc = new Scanner(a);
		System.out.print("당신의 이름은>>");
		String name = sc.next();//한 단어로 읽음(기본은 공백분류) 
		System.out.print("당신의 나이는>>");
		int age = sc.nextInt();
		System.out.println("당신은 나이가 %d이고 이름은 %s이군",age, name);
		//이름 입력하고 띄우고 나이 입력하면 바로 결과가 나와 버

		sc.close();

	}
}

/*
 * private static void print() { //표준출력 : 기본은 모니터로 되어 있음 PrintStream a =
 * System.out; a.println(10); a.println("20"); a.println(false); a.println(a); }
 */

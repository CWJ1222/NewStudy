package com.shinhan.day02;

import java.util.Scanner;

public class 조건문 {

	public static void main(String[] args) {
		// call();
		// call2();
		// call3();
		// call4();
		call5();

	}

	private static void call5() {
		String grade = "B"; //A이면 골드, 비 실버, 씨 브론즈
		String result;
		switch (grade) {
		case "A" -> {result = "G";}
		case "B" -> {result = "S";}
		case "C" -> {result = "B";}
				
		default -> {result = "Guest";}
		}
		
		System.out.println("당신의 등급은 " + result);


	}

	private static void call4() {
		Scanner sc = new Scanner(System.in);
		System.out.print("점수입력>>");
		int score = sc.nextInt();
		char grade = 'F';
		switch (score / 10) {
		case 10, 9 -> {
			grade = 'A';
		}
		case 8 -> {
			grade = 'B';
		}
		case 7 -> {
			grade = 'C';
		}
		default -> {
			grade = 'F';
		}
		}
		System.out.printf("당신의 점수는 %d이고 학점은 %s", score, grade);
	}

	private static void call3() {
		Scanner sc = new Scanner(System.in);
		System.out.print("점수입력>>");
		int score = sc.nextInt();
		char grade = 'F';
		switch (score / 10) {
		// case 10,9
		case 10:
		case 9:
			grade = 'A';
			break;
		case 8:
			grade = 'B';
			break;
		case 7:
			grade = 'C';
			break;
		default:
			grade = 'F';
			break;
		}
		System.out.printf("당신의 점수는 %d이고 학점은 %s", score, grade);
	}

	private static void call2() {
		// 사용자의 점수를 입력받아서 90이상 에이, 80이상 비, 70이상 씨, 나머지는 에프
		Scanner sc = new Scanner(System.in);
		System.out.print("점수입력>>");
		int score = sc.nextInt();
		char grade = 'F';
		if (score >= 90) {
			grade = 'A';
		} else if (score >= 80) {
			grade = 'B';
		} else if (score >= 70) {
			grade = 'C';
		}

		System.out.printf("당신의 점수는 %d이고 학점은 %s", score, grade);

		sc.close();

	}

	private static void call() {
		int data = 10;
		if (data % 3 == 0) {
			System.out.println("3의배수");
			System.out.println("!!!!!!!");

		} else {
			System.out.println("3의배수아님");
		}
		System.out.println("END");
	}

}

/*
 * 
 * 실행문이 한줄일 때는 중괄호 제외 가능 유지 보수 시 중간에 하나라도 넣을 수 있기 때문에 중괄호 써주는 것이 좋 break는
 * switch를 빠져나가는 것. 빠져나가지 않으면 아래로 흘러감. case 별로 블록을 만들어서 중괄호를 쳐줘야된다. 그래야 구분됨.(변수
 * 설정 시 사용됨) case에서 화살표를 사용하면 break대신 중괄호로 사용 가능함.
 * 
 * 
 * 
 */
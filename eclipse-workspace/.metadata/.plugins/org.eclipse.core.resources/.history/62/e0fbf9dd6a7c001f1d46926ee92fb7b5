package com.shinhan.day03;

import java.util.Scanner;

public class LABq2 {

	public static void main(String[] args) {
		call();
	}

	private static void call() {
		Scanner sc = new Scanner(System.in);
		System.out.print("문자열을 입력하세요 : ");
		String inputString = sc.nextLine(); //공백이 있을 수 있으니 전체를 읽어야 함
		
		//System.out.println(inputString.length());//문자열의 길이
	
		System.out.println("문자열의 길이"+inputString.length());//문자열의 길이 , index 0부터 시작
	 for(int i =0;i<inputString.length();i++) {
		 System.out.println(inputString.substring(0, i+1));
	 }

		
		sc.close();
	}

}
